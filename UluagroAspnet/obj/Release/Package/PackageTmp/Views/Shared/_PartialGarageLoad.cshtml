@model UluagroAspnet.ClassGetAjaxs.GarageDataVM

<div class="col-md-12 mb-3">
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="text-center">
                <th>Adı</th>
                <th>Tipi</th>
                <th>Vəziyyəti</th>
                <th>İşləmə tipi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.list)
            {
                <tr class="text-center">
                    <td>@item.name</td>
                    <td>@item.type</td>
                    <td>@item.condition</td>
                    <td>@item.work_type</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-md-12 d-flex justify-content-center">
    <nav id="page_garage_ordered">
        <ul class="page_list">
            @if (Model.pagecount > 11)
            {
                <li class="page_item"><a class="page_link step_to" href="#" data-skip="0">Ilk səhifə</a></li>

                if (Model.currentpage + 5 <= 11)
                {
                    for (int i = 1; i <= 11; i++)
                    {
                        <li class="page_item"><a class="page_link @(Model.currentpage == i ? "active" : "")" href="#" data-skip="@(i-1)">@i</a></li>
                    }
                }
                else if (Model.currentpage + 5 > 11 && Model.currentpage + 5 <= Model.pagecount)
                {
                    for (int i = Model.currentpage - 5; i <= Model.currentpage + 5; i++)
                    {
                        <li class="page_item"><a class="page_link @(Model.currentpage == i ? "active" : "")" href="#" data-skip="@(i-1)">@i</a></li>
                    }
                }
                else if (Model.currentpage + 5 > Model.pagecount)
                {
                    for (int i = Model.currentpage - (10 - ((int)Model.pagecount - Model.currentpage)); i <= Model.pagecount; i++)
                    {
                        <li class="page_item"><a class="page_link @(Model.currentpage == i ? "active" : "")" href="#" data-skip="@(i-1)">@i</a></li>
                    }
                }

                <li class="page_item"><a class="page_link step_to" href="#" data-skip="@(Model.pagecount - 1)">Son səhifə</a></li>
            }
            else
            {
                for (int i = 1; i <= Model.pagecount; i++)
                {
                    <li class="page_item"><a class="page_link @(Model.currentpage == i ? "active" : "")" href="#" data-skip="@(i-1)">@i</a></li>
                }
            }
        </ul>
    </nav>
</div>
