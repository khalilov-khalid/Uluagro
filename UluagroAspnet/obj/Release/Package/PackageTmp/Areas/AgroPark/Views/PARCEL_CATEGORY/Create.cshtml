@model UluagroAspnet.Models.PARCEL_CATEGORY

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Sahə Kateqoriyası Əlavə Ele</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <Label class="control-label col-md-3">Adı</Label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Əlavə ele" class="btn btn-primary" />
                    <a href="@Url.Action("Index","PARCEL_CATEGORY")" class="btn btn-danger">Geriyə qayıt</a>
                </div>
            </div>
        </div>
    }
</div>
