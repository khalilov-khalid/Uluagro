@model UluagroAspnet.Models.TECHNIQUE

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12 d-flex justify-content-between mb-3">
            <h4>Yeni Texnika Əlavə Et</h4>
            <a href="@Url.Action("Index","TECHNIQUEs")" class="u_btn go_b_btn">Geri qayıt</a>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-6 mb-3">
            <div class="form-group">
                <label class="control-label ">Adı</label>
                <div>
                    @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="form-group">
                <label class="control-label ">Kategoriyası</label>
                <div>
                    @Html.DropDownList("TYPE_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TYPE_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="form-group">
                <label class="control-label ">Texniki Vəziyyət</label>
                <div>
                    @Html.DropDownList("CONDITION_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CONDITION_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="form-group">
                <label class="control-label ">İslək Vəziyyət</label>
                <div>
                    @Html.DropDownList("WORKING_TYPE_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WORKING_TYPE_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-12 d-flex justify-content-center">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Əlavə Et" class="u_btn sbm_btn" />
                </div>
            </div>
        </div>
    </div>
    }
</div>
