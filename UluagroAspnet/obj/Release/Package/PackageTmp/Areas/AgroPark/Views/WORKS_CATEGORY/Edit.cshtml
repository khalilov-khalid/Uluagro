@model UluagroAspnet.Models.WORKS_CATEGORY

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-12 d-flex justify-content-between mb-3">
                <h3>Düzəliş et</h3>
                <a href="@Url.Action("Index","WORKS_CATEGORY")" class="u_btn go_b_btn">Geri Qayıt</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OBJECTID)

            <div class="col-md-7 mb-3">
                <div class="form-group">
                    <label class="control-label">Adı</label>
                    <div>
                        @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            
            <div class="col-md-12 d-flex justify-content-center">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Yadda saxla" class="u_btn sbm_btn" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
