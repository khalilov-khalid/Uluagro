@model UluagroAspnet.Areas.AgroPark.ModelViews.SiloDetailVM

<div class="row">
    @* Bitkiler *@
    <div class="col-md-3">
        <div class="form-group">
            <label class="control-label">Bitki</label>
            <select class="form-control" id="crops" required>
                <option value="" selected disabled>Seçin</option>
                @foreach (var item in Model.crops)
                {
                    <option value="@item.OBJECTID" @(Model.stock.CROP_SORT.CROP_ID == item.OBJECTID ? "selected" : "") >@item.NAME</option>
                }
            </select>
        </div>
    </div>

    @* Sortlar *@
    <div class="col-md-3">
        <div class="form-group">
            <label class="control-label" for="CROPSORTID">Bitki sortu</label>
            <select class="form-control" id="CROPSORTID" name="CROPSORTID" required>
                <option value="" selected>Seçin</option>
                @foreach (var item in Model.sorts)
                {
                    <option value="@item.OBJECTID" @(Model.stock.CROPSORTID == item.OBJECTID ? "selected" : "")>@item.NAME</option>
                }
            </select>
        </div>
    </div>

    @* Keyfiyyet derecesi *@
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label">Keyfiyyət dərəcəsi</label>
            <div>
                <select name="CROPREPRODUCTIONID" class="form-control" id="repr" required>
                    <option selected disabled value="">Seçin</option>
                    @foreach (var item in Model.repr)
                    {
                        <option value="@item.OBJECTID" @(Model.stock.CROPREPREDUCTIONID == item.OBJECTID ? "selected" : "") >@item.NAME</option>
                    }
                </select>
            </div>
        </div>
    </div>

    @* Miqdar *@
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label">Mövcud miqdar</label>
            <input type="number" step="0.01" name="total" value="@Model.stock.TOTALCOUNT" class="form-control" readonly />
        </div>
    </div>

    @* Daxil edilen miqdar *@
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label">Əlavə miqdar</label>
            <input type="number" step="0.01" name="totalAdd" value="" class="form-control" id="count" />
        </div>
    </div>

    @* Add *@
    <div class="col-md-12">
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <button type="button" class="u_btn sbm_btn" id="add_silo">Əlavə et</button>
            </div>
        </div>
    </div>
</div>