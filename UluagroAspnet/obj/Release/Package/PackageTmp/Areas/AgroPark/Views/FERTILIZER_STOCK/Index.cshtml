                            @Html.DisplayFor(modelItem => item.UNIT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CREATED_DATE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.USED_DATE)
                        </td>
