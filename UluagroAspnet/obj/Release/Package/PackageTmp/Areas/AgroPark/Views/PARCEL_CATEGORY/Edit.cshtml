@model UluagroAspnet.Models.PARCEL_CATEGORY

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Düzəliş et</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OBJECTID)

            <div class="form-group">
                <Label class="control-label col-md-3">Adı</Label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Yadda saxla" class="btn btn-primary" />
                    <a href="@Url.Action("Index","PARCEL_CATEGORY")" class="btn btn-danger">Geri qayıt</a>
                </div>
            </div>
        </div>
    }
</div>
