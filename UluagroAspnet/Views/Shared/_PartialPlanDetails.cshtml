@model UluagroAspnet.ClassGetAjaxs.PlanDetailVM

<div class="col as-12 mb-20">
    <label>Sahə: </label>
    <span class="detail_span">@Model.selectedPlan.PARCEL.NAME</span>
    <label>Bitki: </label>
    <span class="detail_span">@Model.selectedPlan.CROP_SORT.CROP.NAME</span>
    <label>Sort: </label>
    <span class="detail_span">@Model.selectedPlan.CROP_SORT.NAME</span>
    <label>Keyfiyyət dərəcəsi: </label>
    <span class="detail_span">@Model.selectedPlan.CROP_REPRODUCTION.NAME</span>
</div>
<div class="col as-12">
    <table class="table bordered hovered no-wrap text-center no-footer mb-20">
        <thead>
            <tr>
                <th>Ay</th>
                <th>Görüləcək iş</th>
                <th>Lazımlı ehtiyyat</th>
                <th>Yekun qiymət</th>
                <th>Hazırkı qiymət</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.detailsList)
            {
                <tr>
                    <td>@item.PLANNINGPLANDETAILSWORK.MONTH</td>
                    <td>@item.PLANNINGPLANDETAILSWORK.WORKCANDO</td>
                    <td>@item.PLANNINGPLANDETAILSWORK.NEEDED</td>
                    <td>@item.FINALLYPRICE</td>
                    <td>@(item.PLANNINGPLANDETAILSWORK.PRICE * Model.selectedPlan.PARCEL.AREA)</td>
                </tr>
            }
        </tbody>
    </table>
</div>