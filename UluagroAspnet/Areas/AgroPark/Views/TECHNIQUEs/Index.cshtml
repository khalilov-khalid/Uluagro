@model IEnumerable<UluagroAspnet.Models.TECHNIQUE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="d-flex justify-content-between mb-3">
        <h3>Texnikaların siyahısı</h3>
        <a href="@Url.Action("Create","TECHNIQUEs")" class="u_btn sbm_btn">Yeni Texnika Əlavə Et</a>
    </div>
    <div class="table_con">
        <table class="table table-hover table-bordered t_h_fixed">
            <thead>
                <tr>
                    <th>
                        Adı
                    </th>
                    <th>
                        Texniki Status
                    </th>
                    <th>
                        Kategoriyası
                    </th>
                    <th>
                        İşlək Status
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TECHNIQUE_CONDITION.NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TECHNIQUE_TYPE.NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TECHNIQUE_WORKING_TYPE.NAME)
                        </td>
                        <td class="icon_center">
                            <a href="@Url.Action("Edit","TECHNIQUEs", new { id = item.OBJECTID })" class="ico ico_edit"><i class="fas fa-pencil-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
