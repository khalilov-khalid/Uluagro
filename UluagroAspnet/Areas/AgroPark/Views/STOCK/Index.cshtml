@model IEnumerable<UluagroAspnet.Areas.AgroPark.ModelViews.StockTotalView>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-3">
        <h3>Anbara giris</h3>
        <div>
            <a href="@Url.Action("Create","STOCK")" class="btn btn-primary">Medaxil ve Mexaric</a>
            <a href="@Url.Action("Details","STOCK")" class="btn btn-info">Ətraflı Məlumat</a>
        </div>
    </div>
    <table class="table table-hover">
        <tr>
            <th>
                Adı
            </th>
            <th>
                Növü
            </th>
            <th>
                Miqdarı
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PRODUCTNAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QUANTITY)
                </td>
                <th>
                    <a class="btn btn-info" href="@Url.Action("Detail","STOCK", new { id=item.OBJECTID})"><i class="fas fa-info-circle"></i></a>
                </th>
            </tr>
        }
    </table>
</div>

