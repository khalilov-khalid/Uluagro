@model UluagroAspnet.Models.Profession

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12 d-flex justify-content-between">
            <h4>Yeni Vezifə əlavə et</h4>
            <a class="u_btn go_b_btn" href="@Url.Action("Index","Professions")">Geri qayıt</a>
        </div>

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-7">
            <div class="form-group">
                <Label class="control-label">Adı</Label>
                <div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="form-group">
                <Label class="control-label">Məhsuldar</Label>
                <div>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.CanResponser)
                        @Html.ValidationMessageFor(model => model.CanResponser, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 d-flex justify-content-center">
            <div class="form-group d-flex">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Əlavə et" class="u_btn sbm_btn" />
                </div>
            </div>
        </div>
    </div>
    }
</div>


