@model IEnumerable<UluagroAspnet.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-3">
        <h3>İstifadəçilərin siyahısı</h3>
        <a href="@Url.Action("Create","Users")" class="btn btn-primary">Yeni İstifadəçi Əlavə Elə</a>
    </div>
    <table class="table table-hover table-bordered">
        <tr>
            <th>
                İşçinin adı
            </th>
            <th>
                Username
            </th>
            <th>
                Grup
            </th>
            <th>
               Daxil edildiyi Tarix
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Worker.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GROUP.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Users", new { id = item.ID })" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        }
    </table>
</div>
