@model UluagroAspnet.Models.FERTILIZER_STOCK

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AgroPark/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12 d-flex justify-content-between mb-3">
            <h4>Anbara Gübrə və ya dərman daxil et</h4>
            <a href="@Url.Action("Index","FERTILIZER_STOCK")" class="u_btn go_b_btn">Geri qayıt</a>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label class="control-label ">Dərman və ya Gübrənin adı</label>
                <div>
                    @Html.DropDownList("FERTILIZER_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FERTILIZER_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label class="control-label ">Miqdarı</label>
                <div>
                    @Html.EditorFor(model => model.UNIT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UNIT, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label class="control-label ">Son İstifadə Tarixi</label>
                <div>
                    @Html.EditorFor(model => model.USED_DATE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.USED_DATE, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-12 d-flex justify-content-center">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Yadda saxla" class="u_btn sbm_btn" />
                </div>
            </div>
        </div>
    </div>
    }
</div>
